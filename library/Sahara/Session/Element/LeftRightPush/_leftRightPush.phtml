<script type="text/javascript">
$(document).ready(function() {
	var leftPush = <?=$this->leftPush?>;
	var rightPush = <?=$this->rightPush?>;
	var rightTop = <?=$this->rightTop?>;

	/* Session panel is to be pushed left. */
	var left = parseInt($("#sessioninfo").css("left")) - leftPush;
	$("#sessioninfo").css("left", left);

	/* Left push contents is to be pushed to the left. */
	var leftPushElements = $(".leftpush").toArray();
	for (var i in leftPushElements)
	{
		var e = leftPushElements[i];
		var oldLeft = parseInt(e.style.left);
		e.style.left = (isNaN(oldLeft) ? -leftPush : oldLeft - leftPush) + "px";
	}

	/* Action bar is to be pushed to the right and up or down. */
	var ab = $("#actionbar");
	var right = parseInt(ab.css("right")) - rightPush;
	ab.css("right", right);
	if (rightTop != 0) ab.css("top", rightTop);


	/* Right push contents is to be pushed to the right and up or down. */
	var rightPushElements = $(".rightpush").toArray();
	for (var i in rightPushElements)
	{
		var e = rightPushElements[i];

		var oldRight = parseInt(e.style.right);
		e.style.right = (isNaN(oldRight) ? -rightPush : oldRight - rightPush) + "px";

		var oldTop = parseInt(e.style.top);
		e.style.top = (isNan(oldTop) ? rightTop : oldTop + rightTop) + "px";
	}
});
</script>