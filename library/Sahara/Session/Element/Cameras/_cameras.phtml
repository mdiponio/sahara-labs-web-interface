<div id="cameras">
<?php for ($i = 0, $k = 1; $i < count($this->cameras); $i++, $k++): $cam = $this->cameras[$i]?>
	<div id="camerapanel<?=$k?>" class="ui-corner-all camerapanel" style="width:<?=$cam['width']?>px;">
		<div class="sessionpanelheader">
			<p>
				<span class="ui-icon ui-icon-video sessionpanelheadericon"></span>Camera <?=$k?>
			</p>
			<a id="cameraclose<?=$k?>" class="sessionpanelhide plaina" href="#">
				<span class="ui-icon ui-icon-close"></span>Turn Off
			</a>
		</div>
		<div id="camera<?=$k?>" class="camera" style="width:<?=$cam['width']?>px;height:<?=$cam['height']?>px;">
		</div>
	</div>
<?php endfor; ?>
</div>

<script type="text/javascript">
//<![CDATA[

$(document).ready( function () {
	/* For cameras that support video, start them streaming. */
<?php for ($i = 0, $k = 1; $i < count($this->cameras); $i++, $k++): $cam = $this->cameras[$i]?>
    <?php if (array_key_exists('jpeg', $cam['url'])): ?>
		changeCameraOption(<?=$k?>, "jpeg", "<?=$cam['url']['jpeg']?>");
    <?php endif; ?>

    /* Close click event. */
	$("#cameraclose<?=$k?>").click( function () {
		$("#camerapanel<?=$k?>").slideUp("slow");
		$("#camform<?=$k?> .jqTransformSelectWrapper span").html("<?=$this->formats['off']?>");
		$("#camform<?=$k?> .jqTransformSelectWrapper a").removeClass("selected");
		$("#camform<?=$k?> .jqTransformSelectWrapper ul li a[index=0]").addClass("selected");
		undeploy(<?=$k?>);
	})
<?php endfor; ?>

});

//]]>
</script>
